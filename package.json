{
  "name": "express-ts-skeleton",
  "version": "1.0.0",
  "description": "skeleton service for express and typescript",
  "scripts": {
    "build": "esbuild ./src/server.ts --platform=node --bundle --minify --outfile=dist/server.js",
    "start": "node dist/server.js",
    "dev": "node --watch dist/server.js",
    "test": "jest --coverage --detectOpenHandles",
    "lint": "eslint --ext .ts .",
    "lint-fix": "eslint --ext .ts .",
    "prettier": "npx prettier src test --check",
    "prettier:fix": "npm run prettier -- --write",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neiltownsley/express-ts-skeleton.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/neiltownsley/express-ts-skeleton/issues"
  },
  "homepage": "https://github.com/neiltownsley/express-ts-skeleton#readme",
  "dependencies": {
    "axios": "^1.4.0",
    "dotenv": "^16.3.1",
    "esbuild": "0.19.2",
    "express": "^4.18.2",
    "pino": "^8.15.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.4",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "axios-mock-adapter": "^1.21.5",
    "concurrently": "^8.2.1",
    "eslint": "^8.48.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "prettier": "3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
